@model MusicRaterWebApp.Models.Album
@{
    /**/

    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a New Album</h2>

@using (Html.BeginForm("Create", "Album"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.albumName, "Name")
        @Html.TextBoxFor(m => m.albumName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.bandName, "Band Name")
        @Html.TextBoxFor(m => m.bandName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.genre, "Genre")
        @Html.TextBoxFor(m => m.genre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.year, "Release Year")
        @Html.TextBoxFor(m => m.year, new { @class = "form-control" })
    </div>
}